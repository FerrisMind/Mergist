{
  "name": "mergist",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "dev:ui": "vite dev --host --port 1420",
    "build": "npm run build:ui && tauri build",
    "build:ui": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
