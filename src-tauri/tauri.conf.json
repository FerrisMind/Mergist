{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v2/tooling/cli/schema.json",
  "productName": "Mergist",
  "version": "0.2.0",
  "identifier": "Mergist",
  "build": {
    "beforeDevCommand": "npm run dev:ui",
    "beforeBuildCommand": "npm run build:ui",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mergist",
        "width": 600,
        "height": 720,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' asset: ipc: http://asset.localhost http://ipc.localhost",
        "script-src": "'self'",
        "style-src": "'self'",
        "img-src": "'self' asset: http://asset.localhost data: blob:",
        "connect-src": "ipc: http://ipc.localhost https://api.github.com https://raw.githubusercontent.com",
        "font-src": "'self' data:",
        "media-src": "'self' blob:",
        "object-src": "'none'",
        "frame-ancestors": "'none'"
      },
      "devCsp": "default-src 'self' asset: ipc: http://localhost:1420 http://asset.localhost http://ipc.localhost; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: http://asset.localhost blob: data:; connect-src 'self' ipc: ws://localhost:1420 http://localhost:1420 http://ipc.localhost https://api.github.com https://raw.githubusercontent.com; font-src 'self' data:; media-src 'self' blob:; object-src 'none'; frame-ancestors 'none'"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIwRjNFNTNEMzBBMDQ1NzEKUldSeFJhQXdQZVh6SU5EY3hmS0IyV2l5Y1ZISGVFQzBFU244ZVFNUTRZS0tkTEZPbkh2RER5YmUK",
      "endpoints": [
        "https://github.com/FerrisMind/Mergist/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "nsis", "msi", "dmg", "appimage"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      }
    }
  }
}
